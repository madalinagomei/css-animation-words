    <style>
      .text-container {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
      }
      .last-word {
        position: relative;
        visibility: visible;
      }
      @keyframes slideUp {
        0% {
          transform: translateY(0);
          visibility: visible;
        }
        100% {
          transform: translateY(30px);
          position: absolute;
        }
      }
      .text-container:hover .last-word {
        animation: slideUp 0.5s ease-in-out forwards;
      }
    </style>
  </head>
